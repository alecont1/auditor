{
  "name": "auditeng",
  "version": "0.1.0",
  "private": true,
  "description": "Automated validation system for electrical commissioning reports",
  "scripts": {
    "dev": "pnpm run --parallel dev:api dev:web",
    "dev:api": "pnpm --filter @auditeng/api dev",
    "dev:web": "pnpm --filter @auditeng/web dev",
    "build": "pnpm run --parallel build:api build:web",
    "build:api": "pnpm --filter @auditeng/api build",
    "build:web": "pnpm --filter @auditeng/web build",
    "db:generate": "pnpm --filter @auditeng/api db:generate",
    "db:migrate": "pnpm --filter @auditeng/api db:migrate",
    "db:push": "pnpm --filter @auditeng/api db:push",
    "db:studio": "pnpm --filter @auditeng/api db:studio",
    "db:seed": "pnpm --filter @auditeng/api db:seed",
    "test": "pnpm run --recursive test",
    "lint": "pnpm run --recursive lint",
    "typecheck": "pnpm run --recursive typecheck",
    "clean": "pnpm run --recursive clean && rm -rf node_modules"
  },
  "keywords": [
    "auditeng",
    "electrical",
    "commissioning",
    "validation",
    "pdf",
    "ai"
  ],
  "author": "AuditEng Team",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
